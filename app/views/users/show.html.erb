<h1>Here is a given user: </h1>

<div class="user_container">
  <div class="user_image">
    <%= image_tag @user.photo %>
  </div>
  <div class="user_content">
    <h1><%= @user.name %></h1>
    <p>Number of posts: <%= @user.posts_counter %></p>
  </div>
</div>
<br>
<p>Bio: <%= @user.bio %></p>

<% if @user.recent_3_posts == [] %> 
  <p>There are no posts by this user.</p>
<% else %>
<h2>Here are the Recent 3 posts by this user: </h2>
<div>
  <% @user.recent_3_posts.each_with_index do |post, index| %>
    <div class="post_container">
    <div><%= link_to "Post ##{index + 1}", user_post_path(post.author, post) %></div>
    <div><%= post.text %></div>
    <div>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></div>
    </div>
  <% end %>
</div>
<% end %>

<button><%= link_to "See all posts", user_posts_path(@user) %></button>